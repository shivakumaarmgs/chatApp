<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <div class="panel-title">Chat Room : 
        <span id="chatRoomInfo" data-user-id="<%= user.id %>" data-chatroom-id="<%- chatRoom.id %>">
          <%- chatRoom.roomName %>
      </span>
      </div>
    </div>
    <div class="panel-body" id="chatWindow">
      <!-- Chat messages starts-->
      <ul class="chat">
      </ul>
      <!-- Chat messages end-->
    </div>
    <div class="panel-footer">
      <div class="input-group">
        <input type="text" class="form-control" placeholder="Enter your message" id="chatMessageInput">
        <span class="input-group-btn">
          <button class="btn btn-success" type="button" onclick=sendMessage()>Go!</button>
        </span>
      </div>
    </div>
  </div>
</div>
